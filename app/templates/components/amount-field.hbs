<div class="row">
  <div class="col-md-12 amount-input">
    <form class="form-inline">
      <div class="form-group">
        <label class="sr-only" for="exampleInputAmount">Amount</label>
        <div class="input-group">
          <div class="input-group-addon">BTC</div>
          {{input class="form-control" type="text" value=amount placeholder="How much in BTC?"}}
        </div>
      </div>
      <button class="btn btn-default" {{action 'orderBtc' amount model direction}}>{{capitalize direction}}</button>
    </form>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-12 total-price">
        {{yield}}
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <small>total</small>
      </div>
    </div>
  </div>
</div>
