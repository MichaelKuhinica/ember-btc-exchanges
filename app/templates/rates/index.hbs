{{#each model as |xc|}}
  <div class="row exchange">
    <div class="col-md-3">
      <a href="{{xc.displayURL}}">
        {{xc.displayName}}
      </a>
    </div>
    <div class="col-md-3">
      <div class="row">
        <div class="col-md-12">
          <small> Ask </small>
          <strong> $ {{xc.ask}} </strong>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <small> Bid </small>
          <strong> $ {{xc.bid}} </strong>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <small> Last </small>
      <big><strong>$ {{xc.last}}</strong></big>
    </div>
    <div class="col-md-3">
      {{#if xc.supported}}
        {{#link-to "rates.buy" xc.id class="btn btn-success"}}
          Buy
        {{/link-to}}
        {{#link-to "rates.sell" xc.id class="btn btn-danger"}}
          Sell
        {{/link-to}}
      {{/if}}
    </div>
  </div>
{{/each}}
